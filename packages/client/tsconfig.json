{
    "compilerOptions" : {
        // üéØ Targeting & Module
        "target"                           : "ES2022", // –¶—ñ–ª—å–æ–≤–∞ –≤–µ—Ä—Å—ñ—è JS
        "lib"                              : [ "DOM", "DOM.Iterable", "ES2022" ], // –í–∫–ª—é—á–∏—Ç–∏ DOM API + ES API
        "module"                           : "ESNext", // –î–ª—è Vite –ø—ñ–¥—Ö–æ–¥–∏—Ç—å ESNext
        "moduleResolution"                 : "bundler", // –ü–æ—Ç—Ä—ñ–±–Ω–æ –¥–ª—è Vite
        "jsx"                              : "react-jsx", // –ù–æ–≤–∏–π JSX —Ç—Ä–∞–Ω—Å—Ñ–æ—Ä–º–µ—Ä React 17+

        // üì§ Output settings
        "outDir"                           : "./dist", // –ö—É–¥–∏ –∫–æ–º–ø—ñ–ª—é–≤–∞—Ç–∏
        "sourceMap"                        : true, // –ì–µ–Ω–µ—Ä—É–≤–∞—Ç–∏ .map —Ñ–∞–π–ª–∏
        "declaration"                      : true, // –ì–µ–Ω–µ—Ä—É–≤–∞—Ç–∏ .d.ts
        "removeComments"                   : true, // –í–∏–¥–∞–ª–∏—Ç–∏ –∫–æ–º–µ–Ω—Ç–∞—Ä—ñ
        "tsBuildInfoFile"                  : "./.tsbuildinfo", // –ö–µ—à –¥–ª—è incremental build

        // üß† –°—Ç—Ä–æ–≥—ñ—Å—Ç—å
        "strict"                           : true, // –£–≤—ñ–º–∫–Ω—É—Ç–∏ —Å—É–≤–æ—Ä—É —Ç–∏–ø—ñ–∑–∞—Ü—ñ—é
        "noUnusedLocals"                   : true,
        "noUnusedParameters"               : true,
        "noFallthroughCasesInSwitch"       : true,
        "skipLibCheck"                     : true,
        "forceConsistentCasingInFileNames" : true,
        "noImplicitAny"                    : true,
        "strictNullChecks"                 : true,

        // üåê Module interop
        "allowSyntheticDefaultImports"     : true, // –î–æ–∑–≤–æ–ª–∏—Ç–∏ —ñ–º–ø–æ—Ä—Ç–∏ –±–µ–∑ default
        "esModuleInterop"                  : true, // –î–æ–¥–∞—Ç–∫–æ–≤–∞ —Å—É–º—ñ—Å–Ω—ñ—Å—Ç—å

        // ‚öôÔ∏è –Ü–Ω—à–µ
        "incremental"                      : true, // –Ü–Ω–∫—Ä–µ–º–µ–Ω—Ç–∞–ª—å–Ω–∞ –∫–æ–º–ø—ñ–ª—è—Ü—ñ—è
        "useDefineForClassFields"          : true, // –ü—ñ–¥—Ç—Ä–∏–º–∫–∞ –ø–æ–ª—è –∫–ª–∞—Å—É —è–∫ —É JS
        "types"                            : [ "vite/client" ], // –¢–∏–ø–∏ –¥–ª—è Vite

        // üîó Alias
        "baseUrl"                          : ".",
        "paths"                            : {
            "~/*"          : [ "src/*" ],
            "~apollo/*"    : [ "src/apollo/*" ],
            "~assets/*"    : [ "src/assets/*" ],
            "~generated/*" : [ "src/generated/*" ],
            "~graphql/*"   : [ "src/graphql/*" ],
            "~modules/*"   : [ "src/modules/*" ],
            "~routes/*"    : [ "src/routes/*" ],
            "~services/*"  : [ "src/services/*" ],
            "~shared/*"    : [ "src/shared/*" ],
            "~store/*"     : [ "src/store/*" ],
            "~typings/*"   : [ "src/typings/*" ]
        }
    },
    
    "include"         : [ "src", "vite.config.ts", "codegen.ts" ],
    "exclude"         : [ "node_modules", "dist", "**/*.spec.ts" ]
}
