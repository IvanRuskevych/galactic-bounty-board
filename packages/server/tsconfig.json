{
    "typeRoots"       : [ "./src/types", "./node_modules/@types" ],

    "compilerOptions" : {
        // üîß Module settings
        "module"                       : "CommonJS",
        "moduleResolution"             : "Node",
        "target"                       : "ES2020",
        "lib"                          : [ "ES2020" ],

        // üì¶ Output settings
        "outDir"                       : "./dist",
        "rootDir"                      : "./src",
        "sourceMap"                    : true,
        "declaration"                  : true,
        "removeComments"               : true,

        // üîå Interop & Imports
        "allowSyntheticDefaultImports" : true,
        "esModuleInterop"              : true,
        "baseUrl"                      : "./",
        "paths"                        : { "~/*" : [ "./src/*" ] },

        // üß† Strictness & type checks
        "strict"                       : true,
        "noImplicitAny"                : true,
        "strictPropertyInitialization" : false,
        "skipLibCheck"                 : true,

        // üß™ Experimental & decorators
        "emitDecoratorMetadata"        : true,
        "experimentalDecorators"       : true
    },

    // üìÅ File system
    "include"         : [ "src/**/*" ],
    "exclude"         : [ "dist", "node_modules" ]
}
